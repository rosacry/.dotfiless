Host *
  StrictHostKeyChecking no
  AddKeysToAgent yes
  UseKeychain yes
  TCPKeepAlive yes
  ForwardAgent yes
  ServerAliveInterval 10
  PreferredAuthentications publickey

#Local

Host chrigLocal
  User chrig
  HostName 192.168.8.214
  Port 22
  IdentityFile ~/.ssh/keys/pc/id_rsa

Host phoneLocal
  #hostname is likely phones ip
  User root
  HostName localhost
  Port 55554
  #passwd root

Host routerLocal
  User root
  IdentityFile ~/.ssh/keys/router/id_rsa
  HostName 192.168.8.1

Host kaliLocal
  HostName 192.168.64.3
  User kali
  IdentityFile ~/.ssh/keys/kali/id_rsa
  #sometimes you need to enable the service sudo systemctl enable --now ssh

Host router
  User root
  HostName localhost
  Port 2224
  IdentityFile ~/.ssh/keys/router/id_rsa
  ProxyJump bastion

Host chrig
  User chrig
  HostName 192.168.8.213
  IdentityFile ~/.ssh/keys/pc/id_rsa
  ProxyJump router

Host wake
  User root
  HostName localhost
  Port 2224
  IdentityFile ~/.ssh/keys/router/id_rsa
  ProxyJump bastion
  RequestTTY yes
  RemoteCommand /usr/bin/etherwake -D -i 'eth0.1' -b "F0:2F:74:CE:EE:94" 2>&1

Host github
  User git
  HostName github.com
  IdentityFile ~/.ssh/keys/github/id_ed25519
  #to authenticate, ssh -T github.com

Host bastion
  HostName ec2-54-89-248-100.compute-1.amazonaws.com
  User ubuntu
  IdentityFile ~/.ssh/keys/bastion/ssh-key.pem


Host kali
  HostName localhost
  Port 2233
  User kali
  IdentityFile ~/.ssh/keys/kali/id_rsa
  ProxyJump bastion
